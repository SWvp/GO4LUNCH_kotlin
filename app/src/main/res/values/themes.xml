<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GO4LUNCH" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowTranslucentStatus">true</item>



        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/white</item>

        <!-- STATUS BAR COLOR -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Trash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Trash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- RATING BAR COLOR -->
    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">#eff700</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.GO4LUNCH">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorButtonNormal">@color/teal_200</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@color/orange</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="NoActionBarSysUITransparentTheme" parent="Theme.GO4LUNCH">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>
</resources>